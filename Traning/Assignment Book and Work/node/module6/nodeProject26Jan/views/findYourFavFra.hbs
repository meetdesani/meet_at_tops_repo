{{> header}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <br>
    <div class="container-sm">
        <h2>
            <p>{{dataFF.[0].productName}}</p>
        </h2>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            {{#each dataFF}}
            <div class="col">
                <div class="card" style="width: 18rem; text-align: center;">
                    <img src="/multer/{{this.productImageName}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.productName}}</h5>
                        <p>
                            {{this.productCategory}}
                            <br>
                            INR: {{this.productPrice}}
                        </p>
                        <a href="/productDetails?productName={{this.productName}}&productCategory={{this.productCategory}}" class="btn btn-light">Details</a>
                        <br>
                        {{!-- <a href="#" class="btn btn-light">Buy Now</a>
                        <a href="#" class="btn btn-light">Add to cart</a> --}}
                        <button type="button" class="btn btn-link">Buy Now</button>
                        <button type="button" class="btn btn-link">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>

</html>
{{>footer}}
